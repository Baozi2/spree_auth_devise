<style type="text/css">

  .sign-container {
    border: 1px solid #D9D9D9;
    padding-top: 40px;
    padding-bottom: 20px;
    margin-top: 50px;
    height: 550px
  }
  .sign-in-container{
    padding-left: 80px;
    padding-right: 80px;

  }
  .sign-in-container input{
    height: 40px;
  }
  .sign-title {
    font-size: 16px;
    font-weight: normal;
    color: #000;
    margin-bottom: 25px;
  }

  .sign-facebook {
    margin-bottom: 25px;
  }

  .ui.horizontal.divider {
    display: table;
    white-space: nowrap;
    height: auto;
    margin: '';
    overflow: hidden;
    line-height: 1;
    text-align: center;
  }

  .ui.horizontal.divider:after, .ui.horizontal.divider:before {
    content: '';
    display: table-cell;
    position: relative;
    top: 50%;
    width: 50%;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,)
  }

  .ui.horizontal.divider:before {
    background-position: right 1em top 50%
  }

  .ui.horizontal.divider:after {
    background-position: left 1em top 50%
  }

  .sign-in-form{
    margin-top: 25px;
  }

  .sign-in-form .sign-submit-container {
    margin-top: 20px;
  }

  .sign-submit-container {
    margin-top: 40px;
  }

  .btn-blue {
    background-color: #59C3D3;
    color: #fff;
    padding: 12px 50px;
    width: 100%;
  }


</style>
<div class="container">

  <div class="col-md-12 col-xs-12  <%= 'alert alert-danger' if flash[:error]%>" id="alert-message">
    <%= flash[:error] if  flash[:error]%>
  </div>
  <div class="sign-container">
    <div class="col-md-offset-3 col-md-6 col-xs-12 sign-in-container">
      <div class="text-center sign-title"><span>SIGN IN</span></div>
      <div class="text-center sign-facebook">
        <img src="/frontend/images/fackbook.png">
      </div>
      <div class="ui  horizontal divider">or</div>
      <div class="sign-in-form">
        <%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path, html: {id: 'sign_in_form'} do |f| %>
            <div class="form-group">
              <label for="email">EMAIL ADDRESS</label>
              <%= f.email_field :email, :class => 'form-control', :tabindex => 1, autofocus: true, autocomplete: 'off' %>
            </div>
            <div class="form-group">
              <label for="password">PASSWORD</label>
              <%= f.password_field :password, :class => 'form-control', :tabindex => 2, autocomplete: 'off' %>
            </div>
            <div class="form-group">
              <a href="<%= spree.recover_password_path %>" style="text-decoration: underline;">Forgot your password?</a>
            </div>
            <div class="text-center sign-submit-container">
              <button type="submit" class="btn btn-blue">Sign In</button>
            </div>
            <div class="text-center sign-submit-container">
              Or <%= link_to 'Create a new account', spree.signup_path %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
  $(function () {
    var email = $("#spree_user_email"),
        password = $("#spree_user_password");
    $("#sign_in_form").submit(function () {
      if(stringBlank(email.val())){
        $("#alert-message").show().text('Email required').addClass("alert alert-danger");
        return false;
      }else if(stringBlank(password.val())){
        $("#alert-message").show().text('Password required').addClass("alert alert-danger");
        return false;
      }
    });


  });

  function stringBlank(string) {
    if ((string.length == 0) || (string.replace(/(^\s*)|(\s*$)/g, "").length == 0)) {
      return true;
    }
    return false;
  }
</script>