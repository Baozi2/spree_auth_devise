


<style type="text/css">

  .sign-container {
    border: 1px solid #D9D9D9;
    padding-top: 40px;
    padding-bottom: 20px;
    margin-top: 10px;
    height: 550px
  }

  .sign-up-container input {
    height: 40px;
  }


  .sign-title {
    font-size: 16px;
    font-weight: normal;
    color: #000;
    margin-bottom: 25px;
  }

  .sign-facebook {
    margin-bottom: 25px;
  }

  .ui.horizontal.divider {
    display: table;
    white-space: nowrap;
    height: auto;
    margin: '';
    overflow: hidden;
    line-height: 1;
    text-align: center;
  }

  .ui.horizontal.divider:after, .ui.horizontal.divider:before {
    content: '';
    display: table-cell;
    position: relative;
    top: 50%;
    width: 50%;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,)
  }

  .ui.horizontal.divider:before {
    background-position: right 1em top 50%
  }

  .ui.horizontal.divider:after {
    background-position: left 1em top 50%
  }


  .sign-in-form .sign-submit-container {
    margin-top: 85px;
  }

  .sign-submit-container {
    margin-top: 20px;
  }
  .sign-up-container {
    padding-left: 80px;
    padding-right: 80px;

  }
  .sign-up-form {
    margin-top: 25px;
  }
  .btn-blue {
    background-color: #59C3D3;
    color: #fff;
    padding: 12px 50px;
    width: 100%;
  }
  .guest_btn{
    font-size: 12px;
    border: none;
    padding: 2px 6px;
    font-size: 10px;
    display:inline;
  }
  .sign_in_link{
    padding: 2px 6px;
  }
</style>


<div class="container">

  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
  <div class="sign-container">

    <div class="col-md-offset-3   col-md-6 col-xs-12 sign-up-container">
      <div class="text-center sign-title"><span>SIGN UP</span></div>
      <div class="text-center sign-facebook">
        <a href="###" id="facebookBtn"><img src="/frontend/images/fackbook.png"></a>
      </div>
      <div class="ui  horizontal divider">or</div>
      <div class="sign-up-form">
        <%= form_for @user, :as => :spree_user, :url => spree.registration_path(@user) do |f| %>
            <div class="form-group">
              <label for="signup-email">EMAIL ADDRESS</label>
              <%= f.email_field :email, :class => 'form-control', autocomlete: 'off' %>
            </div>
            <div class="form-group">
              <label for="signup-password">PASSWORD</label>
              <%= f.password_field :password, :class => 'form-control', autocomlete: 'off' %>
            </div>
            <div class="form-group">
              <label for="confirm-password">CONFIRM PASSWORD</label>
              <%= f.password_field :password_confirmation, :class => 'form-control',
                                   autocomlete: 'off' %>
            </div>
            <div class="text-center sign-submit-container">
              <button type="submit" class="btn btn-blue">Sign Up</button>
            </div>
            <div class="text-center sign-submit-container">
              <%= link_to 'Sign In', spree.login_path, class:'sign_in_link' %> | <%= link_to 'CHECKOUT AT  GUEST', spree.checkout_guest_path, class: 'btn guest_btn' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '378436995697539',
      xfbml      : true,
      version    : 'v2.6'
    });
  };

  (function(d, s, id){
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));

  $("#facebookBtn").click(function(){
    FB.login(function(response) {
      $.ajax({
        url: '/user/oauth/facebook/callback',
        type: 'post',
        data: { facebook_access_token: response.authResponse.accessToken},
        success: function(res){
          if(res.status){
            window.location.href= '/checkout/address'
          }else{
            alert('Facebook login error')
          }
        },
        fail: function(){
          alert("Facebook login error")
        }
      });
    }, {scope: 'public_profile,email'});
  });

</script>